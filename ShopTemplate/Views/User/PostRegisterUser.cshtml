@{
    ViewData["Title"] = "Enter Details";
}
<div>
    <div class="d-flex flex-column flex-root" id="kt_body1">
        <div class="d-flex flex-column flex-lg-row flex-column-fluid">
            <div class="d-flex flex-column flex-lg-row-fluid py-10 gradient-bg" style="flex: 1 auto; min-width: 0;">
                <div class="d-flex flex-center flex-column flex-column-fluid">
                    <div class="w-lg-400px p-10 p-lg-10 mx-auto bg-white no-auth" style="border-radius: 8px;">
                        <form class="form w-100 fv-plugins-bootstrap5 fv-plugins-framework" method="post" id="kt_sign_up_form" asp-action="SaveRegisterUser">
                            <div class="mb-5">
                                <a href="https://shopivana.com" target="_blank" class="pb-10 d-block">
                                    <img alt="Logo" src="https://app.shopivana.com/Content/images/logo_default_dark.png?1.0.2.4" class="h-60px">
                                </a>
                                <p class="text-dark mb-5 fs-1">Sign Up</p>
                                <p class="text-gray-700 mb-0">Sign Up to Shopivana for free.</p>
                            </div>
                            <div class="mb-5">
                                <div class="mb-5 fv-plugins-icon-container">
                                    <label class="position-relative w-100">
                                        <input type="text" class="input__field no-auth-input" id="Name" name="Name" autocomplete="off" placeholder=" " readonly onfocus="$(this).removeAttr('readonly');" onblur="$(this).attr('readonly');" onchange="    return validateNameField();"/>
                                        <span class="input__label">Name</span>
                                    </label>
                                    <div class="fv-plugins-message-container invalid-feedback" id="namefeedback">

                                    </div>
                                </div>
                            </div>
                            
                            <div class="text-left">
                                <button type="button" id="kt_sign_in_submit" class="btn btn-lg btn-primary w-100 my-4" onclick = "    return submitForm();">
                                    <span class="indicator-label" id="finishButton">Finish</span>
                                    
                                </button>
                            </div>
                            <div class="text-center">
                           <a asp-controller="User" asp-action="SignOut">Sign Out</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
        $(document).ready(function () {
            $("#Name").focus();
        });
        function validateNameField() {
            returnVal = true
            
            if($("#Name").val().trim() == ""){
                $("#namefeedback").html('<div data-field="Name" data-validator="notEmpty">Name is required </div>')
                return false
            }
            else{
                $("#namefeedback").html('')
            }
            return returnVal
        }
        function validate(){
            retNameVal =true
            
            retNameVal = validateNameField()
            return retNameVal
        }
        function submitForm(){
            retVal = validate()
            
            if(retVal==true){
                $("#kt_sign_up_form").submit();
                return true
            }
            else{
                return false
            }
        }    
            </script>


